---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from '@images/post-05.png';

---
<MainLayout title="Images">

    <h1 class="text-2xl text-white">Images</h1>

    <h1>img src normal</h1>
    <img 
        src="/assets/images/post-05.png" 
        width="250" 
        height="250"
    >
    <h1>Componente Imagen W/H 250</h1>
    <Image 
        src={post05}
        width="250"
        height="250"
        alt="post-05"
    />
    <h1>Componente Imagen con style 250px</h1>
    <Image 
        src={post05}
        style={{width: '250px', height: '250px'}}
        width="250"
        height="250"
        alt="post-05"
    />
    <h1>Componente Imagen con low quality</h1>
    <Image 
        src={post05}
        quality='low'
        width="250"
        height="250"
        alt="post-05"
    />
    <h1>Componente Imagen con high quality</h1>
    <Image 
        src={post05}
        quality='high'
        width="250"
        height="250"
        alt="post-05"
    />
    <h1>Componente Imagen con formato JPG</h1>
    <Image 
        src={post05}
        quality='high'
        format="jpg"
        width="250"
        height="250"
        alt="post-05"
    />
    <h1>Picture</h1>
    <!-- formats={['webp', 'avif', 'jpeg', 'png']} -->
    <!-- widths={[250, 500, 720, post05.width]}
    sizes={`(max-width 360px) 240px, (max-width 720px) 540px, (max-width 1600px) 720px, ${post05.width}px `} -->
    <!-- width={post05.width/2}
    densities={[1.5, 2]} -->
    <Picture 
        src={post05}
        alt="post-05"
    />

    <div style={{height: '3000px'}}></div>

    <img 
        loading="lazy" 
        src="/assets/images/post-01.png" 
        alt="post-05"
    >


</MainLayout>
<style>
    h1{
        @apply text-white mt-10
    }
</style>